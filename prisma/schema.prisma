generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  email         String    @unique @map("email")
  name          String?   @map("name")
  image         String?   @map("image")
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime? @default(now()) @map("created_at")
  updatedAt     DateTime? @updatedAt @map("updated_at")
  password      String?   @map("password")
  role          String    @default("user") @map("role")

  files         UserFile[]
  prompts       Prompt[]
  conversations Conversation[]
  kb_access     KBAccess?
  messages      Message[]
  documents     Document[]
  feedbacks     Feedback[]

  @@map("users")
}

model UserFile {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  user_id      String    @map("user_id") @db.Uuid
  filename     String    @map("filename")
  storage_path String    @map("storage_path")
  created_at   DateTime? @default(now()) @map("created_at")

  user      User       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  messages  Message[]  @relation("UserFileMessages")
  documents Document[]

  @@map("user_files")
}

model Prompt {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  user_id   String?   @map("user_id") @db.Uuid
  prompt    String    @map("prompt")
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  is_active Boolean?  @default(false) @map("is_active")
  name      String?   @map("name")

  user User? @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("prompts")
}

model Conversation {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  title     String?   @default("New Chat") @map("title")
  user_id   String    @map("user_id") @db.Uuid
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  user      User       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  messages  Message[]
  feedbacks Feedback[]

  @@map("conversations")
}

model Message {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  conversation_id String    @map("conversation_id") @db.Uuid
  user_id         String    @map("user_id") @db.Uuid
  user_file_id    String?   @map("user_file_id") @db.Uuid
  role            String    @map("role")
  content         String    @map("content")
  createdAt       DateTime? @default(now()) @map("created_at")
  sources         Json?     @map("sources")

  conversation Conversation @relation(fields: [conversation_id], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  userFile     UserFile?    @relation("UserFileMessages", fields: [user_file_id], references: [id], onDelete: Cascade)

  @@map("messages")
}

model KBAccess {
  id                   String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  user_id              String    @unique @map("user_id") @db.Uuid
  hasAccessToDefaultKB Boolean   @default(false) @map("has_access_to_default_kb")
  createdAt            DateTime? @default(now()) @map("created_at")
  updatedAt            DateTime? @updatedAt @map("updated_at")

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("kb_accesses")
}

model Document {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  user_id    String?   @map("user_id") @db.Uuid
  content    String    @map("content")
  metadata   Json?     @map("metadata")
  embedding  Json      @map("embedding")
  created_at DateTime? @default(now()) @map("created_at")
  file_id    String?   @map("file_id") @db.Uuid

  user User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  file UserFile? @relation(fields: [file_id], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Feedback {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  user_id         String    @map("user_id") @db.Uuid
  conversation_id String    @map("conversation_id") @db.Uuid
  conv_msg_id     String    @map("conv_msg_id") @db.Text  // Add @db.Text
  ai_response     String    @map("ai_response")
  user_query      String?   @map("user_query")
  thumb           String    @default("up") @map("thumb")
  comment         String?   @map("comment")
  createdAt       DateTime? @default(now()) @map("created_at")

  user         User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  conversation Conversation @relation(fields: [conversation_id], references: [id], onDelete: Cascade)

  @@map("feedbacks")
}
