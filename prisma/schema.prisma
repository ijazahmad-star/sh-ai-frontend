generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  email          String    @unique @map("email")
  name           String?   @map("name")
  image          String?   @map("image")
  emailVerified  DateTime? @map("email_verified")
  createdAt      DateTime? @default(now()) @map("created_at")
  updatedAt      DateTime? @updatedAt @map("updated_at")
  password       String?   @map("password")
  role           String    @default("user") @map("role")

  files         UserFile[]
  prompts       Prompt[]
  conversations Conversation[]
  kb_access     KBAccess?
  messages      Message[]
  documents     Document[]

  @@map("users")
}

model UserFile {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  user_id      String    @db.Uuid @map("user_id")
  filename     String    @map("filename")
  storage_path String    @map("storage_path")
  created_at   DateTime? @default(now()) @map("created_at")

  user      User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  messages  Message[] @relation("UserFileMessages")
  documents Document[]

  @@map("user_files")
}

model Prompt {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  user_id   String?   @db.Uuid @map("user_id")
  prompt    String    @map("prompt")
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  is_active Boolean?  @default(false) @map("is_active")
  name      String?   @map("name")

  user User? @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("prompts")
}

model Conversation {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  title     String?   @default("New Chat") @map("title")
  user_id   String    @db.Uuid @map("user_id")
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  user      User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  messages Message[]

  @@map("conversations")
}

model Message {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  conversation_id String    @db.Uuid @map("conversation_id")
  user_id         String    @db.Uuid @map("user_id")
  user_file_id    String?   @db.Uuid @map("user_file_id")
  role            String    @map("role")
  content         String    @map("content")
  createdAt       DateTime? @default(now()) @map("created_at")
  sources         Json?     @map("sources")

  conversation Conversation @relation(fields: [conversation_id], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  userFile     UserFile?    @relation("UserFileMessages", fields: [user_file_id], references: [id], onDelete: Cascade)

  @@map("messages")
}

model KBAccess {
  id                   String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  user_id              String    @unique @db.Uuid @map("user_id")
  hasAccessToDefaultKB Boolean   @default(false) @map("has_access_to_default_kb")
  createdAt            DateTime? @default(now()) @map("created_at")
  updatedAt            DateTime? @updatedAt @map("updated_at")

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("kb_accesses")
}

model Document {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid @map("id")
  user_id           String?   @db.Uuid @map("user_id")
  content           String    @map("content")
  metadata          Json?     @map("metadata")
  embedding         Json      @map("embedding")
  created_at        DateTime? @default(now()) @map("created_at")
  file_id           String?   @db.Uuid @map("file_id")

  user User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  file UserFile? @relation(fields: [file_id], references: [id], onDelete: Cascade)

  @@map("documents")
}